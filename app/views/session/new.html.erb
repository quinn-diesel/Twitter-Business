
<% if flash[ :error ].present? %>
 <p><strong> <%= flash[ :error ] %> </strong></p>
<% end %>

<div class="ui form" id="loginForm">
    <%= form_tag login_path do %>

     <%= label_tag 'Email' %>
     <%= email_field_tag :email, nil %>
     <br>

     <%= label_tag 'Password' %>
     <%= password_field_tag :password, nil %>
     <br>

    <div class="ui teal button">
      <%= submit_tag 'Login'%>
    </div>
    <% end %>
